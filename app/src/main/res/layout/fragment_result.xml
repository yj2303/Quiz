<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultFragment"
    android:background="@color/Black">


    <TextView
        android:id="@+id/tv_Result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="182dp"
        android:layout_marginTop="62dp"
        android:layout_marginEnd="182dp"
        android:text="Results"
        android:textColor="@color/White"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/result_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="99dp"
        android:layout_height="112dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="156dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_Result" />

    <TextView
        android:id="@+id/result_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100%"
        android:textColor="@color/White"
        app:layout_constraintBottom_toBottomOf="@+id/result_progress_bar"
        app:layout_constraintEnd_toEndOf="@+id/result_progress_bar"
        app:layout_constraintStart_toStartOf="@+id/result_progress_bar"
        app:layout_constraintTop_toTopOf="@+id/result_progress_bar"
        app:layout_constraintVertical_bias="0.505" />

    <TextView
        android:id="@+id/correct_answers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="302dp"
        android:layout_marginEnd="250dp"
        android:text="Correct Answers"
        android:textColor="@color/White"
        app:layout_constraintEnd_toStartOf="@+id/ques_correct_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wrong_numbers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="21dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="255dp"
        android:text="Wrong Answers"
        android:textColor="@color/White"
        app:layout_constraintEnd_toStartOf="@+id/ques_wrong_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/correct_answers" />

    <TextView
        android:id="@+id/ques_missed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="241dp"
        android:text="Questions Missed"
        android:textColor="@color/White"
        app:layout_constraintEnd_toStartOf="@+id/ques_missed_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrong_numbers" />

    <TextView
        android:id="@+id/ques_correct_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginTop="302dp"
        android:text="NA"
        android:textColor="@color/White"
        app:layout_constraintStart_toEndOf="@+id/correct_answers"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ques_wrong_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="255dp"
        android:layout_marginTop="47dp"
        android:text="NA"
        android:textColor="@color/White"
        app:layout_constraintStart_toEndOf="@+id/wrong_numbers"
        app:layout_constraintTop_toBottomOf="@+id/ques_correct_result" />

    <TextView
        android:id="@+id/ques_missed_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="241dp"
        android:layout_marginTop="54dp"
        android:text="NA"
        android:textColor="@color/White"
        app:layout_constraintStart_toEndOf="@+id/ques_missed"
        app:layout_constraintTop_toBottomOf="@+id/ques_wrong_result" />

    <Button
        android:id="@+id/btn_home"
        android:layout_width="211dp"
        android:layout_height="47dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="27dp"
        android:background="@drawable/list_btn_bg"
        android:text="GO TO HOME"
        android:textColor="@color/White"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>